# Clean URLs: serve .html when extension is omitted (Apache)
RewriteEngine On
RewriteBase /

# If the request is for a real file or directory, leave it as is
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Map clean URLs to .html
RewriteRule ^about/?$    about.html    [L]
RewriteRule ^useful/?$   useful.html   [L]
RewriteRule ^work/?$     work.html     [L]
RewriteRule ^writing/?$  writing.html  [L]
RewriteRule ^photography/?$ photography.html [L]
RewriteRule ^contact/?$  contact.html  [L]

# Optional: redirect old .html URLs to clean URLs (SEO)
RewriteCond %{THE_REQUEST} \s/+([^.]+)\.html[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]
